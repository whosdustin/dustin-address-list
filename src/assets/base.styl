html
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  margin 0
  font-family 'Open Sans', sans-serif
  font-size 16px
  line-height 1.5
  background #F8F5FC

#app
  box-sizing border-box
  width 100%
  padding 20px
  margin 0 auto

  @media (min-width: 600px)
    width: 600px

hr
  box-sizing content-box
  height 0
  overflow visible

a
  color #39b982
  font-weight 600
  background-color transparent

h1,
h2,
h3,
h4,
h5,
h6
  display flex
  align-items center
  font-family 'Montserrat', sans-serif

h1
  font-size 32px
  font-weight 700

  @media (min-width: 600px)
    font-size 50px

h2
  font-size 38px
  font-weight 700

h3
  font-size 28px
  font-weight 700

h4
  font-size 21px
  font-weight 700

h5
  font-size 16px
  font-weight 700

h6
  font-size 15px
  font-weight 700

b,
strong
  font-weight bolder

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  margin -1px
  overflow hidden
  clip rect(0,0,0,0)
  border 0

.-text-error
  color tomato

.-text-gray
  color rgba(0, 0, 0, 0.5)

.text-center
  text-align center

.-empty
  padding 20px
  border-radius 6px
  background rgba(0, 0, 0, 0.1)

.-errors
  padding 10px
  margin 20px 0
  border-radius 6px
  color rgba(245, 0, 0, 0.8)
  background rgba(240, 0, 0, 0.1)

  > h4
    color rgba(245, 0, 0, 0.8)
    margin 0

button,
label,
input,
optgroup,
select,
textarea
  display inline-flex
  font-family 'Open sans', sans-serif
  font-size 100%
  line-height 1.15
  margin 0

button,
input
  overflow visible

button,
select
  text-transform none

button,
[type='button'],
[type='reset'],
[type='submit']
  -webkit-appearance none

button::-moz-focus-inner,
[type='button']::-moz-focus-inner,
[type='reset']::-moz-focus-inner,
[type='submit']::-moz-focus-inner
  border-style none
  padding 0

button:-moz-focusring,
[type='button']:-moz-focusring,
[type='reset']:-moz-focusring,
[type='submit']:-moz-focusring
  outline 2px solid #01A1E4

label
  color rgba(0, 0, 0, 0.5)
  font-weight 700

input
  box-sizing border-box
  background transparent
  border 0
  border-bottom-style solid
  border-bottom-width 2px
  border-bottom-color #ccc

[type='checkbox'],
[type='radio']
  box-sizing border-box
  padding: 0

[type='number']::-webkit-inner-spin-button,
[type='number']::-webkit-outer-spin-button
  height auto

[type='search']
  -webkit-appearance textfield
  outline-offset -2px

[type='search']::-webkit-search-decoration
  -webkit-appearance none

[type='text'],
[type='number'],
[type='search'],
[type='password'],
[type='email']
  height 52px
  width 100%
  padding 0 10px
  font-size 20px

[type='text']:focus,
[type='number']:focus,
[type='search']:focus,
[type='password']:focus,
[type='email']:focus
  outline none
  border-color #01A1E4

[hidden]
  display none
